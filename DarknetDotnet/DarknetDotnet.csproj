<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<OutputType>Exe</OutputType>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="OpenCvSharp4.Windows" Version="4.9.0.20240103" />
	</ItemGroup>

	<ItemGroup>
		<None Update="image.jpg">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>
		<None Update="LegoGears.cfg">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>
		<None Update="LegoGears.names">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>
		<None Update="LegoGears_best.weights">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>
	</ItemGroup>

	<ItemGroup>
	  <Folder Include="x64\" />
	</ItemGroup>


	<Target Name="PostBuild" AfterTargets="PostBuildEvent">
		<ItemGroup>
			<DarknetFiles Include="..\build\src-lib\$(Configuration)\*.*" 
			Exclude="..\build\src-lib\$(Configuration)\yolo_v2_class.*"
			/>
		</ItemGroup>

		<Copy SourceFiles="@(DarknetFiles)" DestinationFolder="$(TargetDir)\x64" SkipUnchangedFiles="true" CopiedFiles="files" />
	</Target>

</Project>
